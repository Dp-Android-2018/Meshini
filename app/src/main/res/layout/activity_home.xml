<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".view.activity.HomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp143w"
        android:layout_height="@dimen/dp113h"
        android:layout_marginTop="@dimen/dp111h"
        app:srcCompat="@mipmap/logo"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5h"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp30_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="@dimen/dp130w"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp26h"
        android:text="@string/never_stop_exploring"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp30_5"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp55h"
        android:background="@color/sky_color"
        android:text="@string/get_started"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp23_5"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="getStart"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dp55w"
        android:layout_height="@dimen/dp55h"
        android:background="#349D9D"
        app:srcCompat="@drawable/ic_left_arrow_white"
        android:rotation="180"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="getStart"/>

</androidx.constraintlayout.widget.ConstraintLayout>